_starter () {
    echo "Downloading source code"
    git clone https://github.com/BionXP/Bion-PyroBot
    cd Bion-PyroBot/ && rm -rf .git
    python3 ../updater.py ../requirements.txt requirements.txt
    echo "Bion-PyroBot v0.2.0, Copyright Â© 2022 (Grey) <https://github.com/grey423>"
    python3 -m Bion
}

_starter
